<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lytcho.apptv.LoginActivity"
    tools:ignore="MergeRootFrame" >

    
    <TextView 
        android:id="@+id/error_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_login"
        android:layout_alignLeft="@+id/post_login"
        android:textColor="#cc1a33"
        android:ems="10"  />

   <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="@string/username"
      android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
      android:id="@+id/username"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textView2"
      android:layout_alignLeft="@+id/textView2"
      android:inputType="text"
      android:ems="10" >

      <requestFocus />
   </EditText>

   <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/username"
      android:layout_marginTop="38dp"
      android:text="@string/password"
      android:textAppearance="?android:attr/textAppearanceMedium" />

   <EditText
      android:id="@+id/password"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textView3"
      android:layout_alignLeft="@+id/textView3"
      android:ems="10"
      android:inputType="textPassword" />

   <Button
      android:id="@+id/post_login"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/password"
      android:layout_centerHorizontal="true"
      android:layout_alignLeft="@+id/password"
      android:layout_marginTop="15dp"
      android:onClick="login"
      android:text="@string/post_login" />

    
</RelativeLayout>
